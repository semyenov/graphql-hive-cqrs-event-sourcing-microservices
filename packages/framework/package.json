{
  "name": "@cqrs/framework",
  "version": "3.0.0",
  "description": "Ultra-clean CQRS/Event Sourcing framework - Schema-first, pure functional, Effect-native with GraphQL Federation",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core": {
      "import": "./dist/core/index.js",
      "types": "./dist/core/index.d.ts"
    },
    "./domain": {
      "import": "./dist/domain/index.js",
      "types": "./dist/domain/index.d.ts"
    },
    "./application": {
      "import": "./dist/application/index.js",
      "types": "./dist/application/index.d.ts"
    },
    "./infrastructure": {
      "import": "./dist/infrastructure/index.js",
      "types": "./dist/infrastructure/index.d.ts"
    },
    "./graphql": {
      "import": "./dist/graphql/index.js",
      "types": "./dist/graphql/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit",
    "demo": "bun run src/examples/simple-demo.ts",
    "demo:full": "bun run src/examples/demo.ts",
    "dev": "bun --watch src/examples/simple-demo.ts"
  },
  "dependencies": {
    "effect": "^3.9.2",
    "@effect/schema": "^0.75.5",
    "ts-pattern": "^5.0.8",
    "graphql": "^16.8.1",
    "@apollo/federation": "^0.38.1",
    "@apollo/subgraph": "^2.7.0",
    "ulid": "^2.3.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.6.0"
  },
  "peerDependencies": {
    "graphql": "^16.8.1"
  }
}