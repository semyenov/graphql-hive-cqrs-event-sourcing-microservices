{
  "name": "@cqrs/framework",
  "version": "1.0.0",
  "description": "Generic CQRS/Event Sourcing Framework for TypeScript",
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./core": {
      "types": "./src/core/index.ts",
      "import": "./src/core/index.ts",
      "default": "./src/core/index.ts"
    },
    "./infrastructure": {
      "types": "./src/infrastructure/index.ts",
      "import": "./src/infrastructure/index.ts",
      "default": "./src/infrastructure/index.ts"
    },
    "./testing": {
      "types": "./src/testing/harness.ts",
      "import": "./src/testing/harness.ts",
      "default": "./src/testing/harness.ts"
    }
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "test": "bun test"
  },
  "keywords": [
    "cqrs",
    "event-sourcing",
    "ddd",
    "domain-driven-design",
    "typescript",
    "bun"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "zod": "^3.22.4",
    "ts-pattern": "^5.0.6",
    "effect": "^3.9.2",
    "reflect-metadata": "^0.2.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "fast-check": "^3.15.0"
  }
}