{
  "name": "graphql-hive-cqrs-event-sourcing-microservices",
  "module": "src/app/server.ts",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun --hot src/app/server.ts",
    "start": "bun src/app/server.ts",
    "test:framework": "bun src/app/test-framework.ts",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "gql:generate": "gql.tada generate-output",
    "gql:check": "gql.tada check",
    "gql:persisted": "gql.tada generate-persisted --output persisted-documents.json",
    "generate:manifest": "bun run scripts/generate-persisted-manifest.ts",
    "codegen": "graphql-codegen",
    "codegen:watch": "graphql-codegen --watch",
    "generate:all": "bun run codegen && bun run gql:generate",
    "clean:unused": "bunx knip"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.7",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-resolvers": "^4.5.1",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@graphql-hive/envelop": "^0.36.2",
    "@graphql-tools/schema": "^10.0.25",
    "gql.tada": "^1.8.13",
    "graphql": "^16.11.0",
    "graphql-yoga": "^5.1.1"
  }
}
